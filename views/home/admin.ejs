<section class="details-section">
    <div class="general-section">
        <div class="t-section">
            <span class="t-data-section-title">General</span>
        </div>
        <div class="data-section">
            <span class="data clients-pending">
                <p>Prospectos Pendientes:</p>
                <h1 class="pending">0</h1>
            </span>
            <span class="data total-clients">
                <p>Prospectos totales:</p>
                <h1 class="total">0</h1>
            </span>
        </div>
    </div>
    
    <div class="users-section" hidden>
        <div class="t-section">
            <span class="t-section-title"></span>
            <button class="btn-add-user">+</button>
        </div>
        <div class="colab-section">
            <div class="colabs">
                <div class="config-table-head">
                    <span class="t-h">Usuario</span>
                    <span class="t-h">Correo</span>
                    <span class="t-h">Rol</span>
                    <span class="t-h">Estado</span>
                </div>
                <!-- table rows -->
            </div>
        </div>
    </div>

    <div class="my-clients-section">
        <div class="t-section">
            <span class="t-clients-section-title">Clientes Asignados</span>
        </div>
        <div class="prospects-section">
            <div class="prospects">
                <div class="prospects-table-head">
                    <span class="t-h">Usuario</span>
                    <span class="t-h">Correo</span>
                    <span class="t-h">Número</span>
                    <span class="t-h">Estado</span>
                </div>
                <!-- table rows -->
            </div>
        </div>
    </div>
</section>

<div class="modal-vendedor hidden__true">
    <div class="bg-modal-vendedor"></div>
    <div class="modal-body">
        <div class="modal-title">Nuevo vendedor</div>
        <form class="modal-form">
            <label for="name">Nombre</label>
            <input type="text" name="name">
            <label for="email">Correo</label>
            <input type="email" name="email">
            <label for="role">Rol</label>
            <select name="role">
                <option value="1">Vendedor</option>
                <option value="2">Gerente</option>
            </select>
            <label for="password">Contraseña</label>
            <input class="inp-pass" type="text" name="password">
            <span class="errors"></span>
            <button class="btn-create-user">Crear</button>
        </form>
    </div>
</div>

